FROM python:3.12-slim

WORKDIR /app

# Dependencias m√≠nimas para PostgreSQL y Python
RUN apt-get update && apt-get install -y \
    build-essential \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Puerto por defecto de Streamlit
EXPOSE 8501

CMD ["streamlit", "run", "dashboard_web.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.enableCORS=false", "--server.enableXsrfProtection=false"]